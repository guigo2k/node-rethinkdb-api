{
  "min_packer_version": "1.0.4",
  "variables": {
    "__comment": "# === RethinkDB Vars === #",
    "rethinkdb_version": "2.3.6-0",

    "__comment": "# === Project Vars === #",
    "auth_file": "{{env `HOME`}}/.gce/symphony-gce-test1.json",
    "project_id": "symphony-gce-test1",
    "ssh_username": "centos",
    "zone": "us-west1-b"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `auth_file`}}",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "centos-7",
      "image_name": "rdb-gce-{{isotime \"2006-01-02-030405\"}}",
      "image_family": "rethinkdb",
      "ssh_username": "{{user `ssh_username`}}",
      "network": "centos-test-vpc",
      "subnetwork": "centos-test-us-west1-infra1",
      "zone": "{{user `zone`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/rdb_server",
      "destination": "/tmp"
    },{
      "type": "shell",
      "inline": [
        "sudo mv /tmp/rdb_server /opt/rethinkdb",
        "sudo bash -c '/opt/rethinkdb/rdb_server install --version {{user `rethinkdb_version`}}'"
      ]
    }
  ]
}
