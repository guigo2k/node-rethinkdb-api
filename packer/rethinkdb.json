{
  "min_packer_version": "1.0.4",
  "variables": {
    "__comment": "# === RethinkDB Vars === #",
    "rethinkdb_version": "2.3.6-0",

    "__comment": "# === Project Vars === #",
    "auth_file": "{{env `HOME`}}/.gce/sym-dev-ic.json",
    "project_id": "sym-dev-ic",
    "ssh_username": "centos",
    "zone": "us-east1-b"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `auth_file`}}",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "centos-7",
      "image_name": "rdb-gce-{{isotime \"2006-01-02-030405\"}}",
      "image_family": "rethinkdb",
      "ssh_username": "{{user `ssh_username`}}",
      "zone": "{{user `zone`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/rethinkdb",
      "destination": "/tmp"
    },{
      "type": "shell",
      "inline": [
        "sudo mv /tmp/rethinkdb /opt/rethinkdb",
        "sudo bash -c '/opt/rethinkdb/rdb_service install --version {{user `rethinkdb_version`}}'"
      ]
    }
  ]
}
